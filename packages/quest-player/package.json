{
  "name": "@thanh01.pmt/quest-player",
  "description": "A React component library for creating and playing interactive coding quests, inspired by Blockly Games.",
  "version": "1.0.3",
  "author": "thanh01.pmt",
  "license": "Apache-2.0",
  "keywords": [
    "react",
    "blockly",
    "quest",
    "gamedev",
    "learn-to-code"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "type": "module",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "development": {
        "import": "./src/index.ts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./i18n": {
      "development": {
        "import": "./src/i18n.ts"
      },
      "import": "./dist/i18n.mjs"
    },
    "./style.css": "./src/index.css",
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build": "vite build"
  },
  "dependencies": {
    "blockly": "12.3.1",
    "@babel/standalone": "^7.28.4",
    "@blockly/field-angle": "^6.0.3",
    "@monaco-editor/react": "^4.7.0",
    "@react-three/drei": "^9.92.3",
    "@react-three/fiber": "^8.15.11",
    "gsap": "^3.13.0",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "js-interpreter": "^6.0.1",
    "react-blockly": "^9.0.0",
    "react-i18next": "^16.0.0",
    "react-resizable-panels": "^3.0.6",
    "three": "^0.159.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/babel__standalone": "^7.1.9",
    "@types/node": "^24.7.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.159.0",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-static-copy": "^3.1.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
